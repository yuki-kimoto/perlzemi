  .index-features li {
    list-style:none;
    display:block;
    float:left;
    width:32.3%;
    background:white;
    margin-left:0.5%;
    margin-right:0.5%;
    margin-bottom:5px;
    border-radius:5px;
    padding:5px;
    height:150px;
    text-align:center;
  }
  .index-features-title {
    margin-top:10px;
    margin-bottom:10px;
    font-weight:bold;
  }

  @media only screen and (max-width:860px) {
    .index-head {
      padding:0;
      height:500px;
      background-position:center 200px;
    }
    .index-head h2 {
      padding:0;
      padding-top:20px;
    }
    .index-head-description {
      padding:0 10px;;
    }
    .index-content {
      width:98%;;
      margin:0 auto -10px auto;
      padding:0px 0 0px 0;
    }
    .index-features li {
      width:100%;
    }
  }
